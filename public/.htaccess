<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow Vite assets
    RewriteCond %{REQUEST_URI} ^/build/
    RewriteRule .* - [L]

    # Allow static assets
    RewriteCond %{REQUEST_URI} (\.css|\.js|\.jpg|\.jpeg|\.png|\.gif|\.svg|\.webp|\.ico|\.woff|\.woff2|\.ttf)$
    RewriteRule .* - [L]

    # Laravel front controller
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

<FilesMatch "\.(env|env\.example|gitignore|gitattributes|xml|json|md|log|lock|yaml|yml)$">
    Order allow,deny
    Deny from all
</FilesMatch>
